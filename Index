<br>
<button onclick="downloadCSV()">Download Excel File</button>
<button onclick="clearTable()">Clear List</button>

<script>
let count = 0;
let scannedData = [];

function onScanSuccess(decodedText) {
  count++;
  const time = new Date().toLocaleString();

  scannedData.push([count, decodedText, time]);

  const table = document.getElementById("dataTable");
  const row = table.insertRow();
  row.insertCell(0).innerText = count;
  row.insertCell(1).innerText = decodedText;
  row.insertCell(2).innerText = time;
}

const html5QrcodeScanner = new Html5QrcodeScanner(
  "reader",
  { fps: 10, qrbox: 250 }
);

html5QrcodeScanner.render(onScanSuccess);

function downloadCSV() {
  let csv = "No,Barcode,Timestamp\n";
  scannedData.forEach(row => {
    csv += row.join(",") + "\n";
  });

  const blob = new Blob([csv], { type: "text/csv" });
  const url = window.URL.createObjectURL(blob);

  const a = document.createElement("a");
  a.href = url;
  a.download = "barcodes.csv";
  a.click();
}

function clearTable() {
  location.reload();
}
</script>

</body>
</html>
